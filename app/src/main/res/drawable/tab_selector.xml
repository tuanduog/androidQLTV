<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi nút được chọn -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FF6200EE"/> <!-- Màu khi nhấn -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Khi nút được chọn (hành động kích hoạt) -->
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#6200EE"/> <!-- Màu khi chọn -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Mặc định khi không có trạng thái đặc biệt -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#DDDDDD"/> <!-- Màu nền mặc định -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
