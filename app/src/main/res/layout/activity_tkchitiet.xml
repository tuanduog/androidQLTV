<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:background="@color/purpose"
        android:text="Thống kê chi tiết"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/user_id"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/user_name"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số phiếu mượn: "
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtSoPhieuMuon"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/tbPhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Dòng tiêu đề -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Phiếu mượn ID"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="@drawable/cell_border"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Tên tài liệu"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="@drawable/cell_border"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:text="Tình trạng"
                    android:background="@drawable/cell_border"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Dữ liệu được thêm ở đây -->
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài liệu yêu thích: "
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtYeuThich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="190dp">
        </ListView>
    </LinearLayout>
</LinearLayout>