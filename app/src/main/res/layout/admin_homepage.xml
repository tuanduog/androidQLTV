<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <!-- Title -->
    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý thư viện"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="85dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp" />
        <ImageButton
            android:id="@+id/imgbtnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user"/>
    </LinearLayout>

    <!-- Image -->
    <ImageView
        android:padding="16dp"
        android:id="@+id/img_library"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/tv"
        android:scaleType="centerCrop"
        android:layout_marginBottom="25dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/flDSTaiLieu"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/border"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/imgbtnXemThongKe"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/book_img"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Xem thống kê"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="35dp"
                    android:textAlignment="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/border"
                >
                <ImageButton
                    android:id="@+id/imgbtnQLTL"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/list"
                    android:layout_marginTop="7px"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Quản lý tài liệu"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="30dp"
                    android:textAlignment="center"
                    />

            </FrameLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/border"
                android:layout_marginRight="20dp">

                <ImageButton
                    android:id="@+id/imgbtnQLND"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="7px"
                    android:layout_marginStart="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Quản lý người dùng"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="25dp"
                    android:textAlignment="center"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/border"
                >
                <ImageButton
                    android:id="@+id/imgbtnQLPM"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/list2"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Quản lý phiếu mượn"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="25dp"
                    android:textAlignment="center"
                    />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/border"
               >

                <ImageButton
                    android:id="@+id/imgbtnDuyetPM"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="7px"
                    android:layout_marginStart="45dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pheduyet" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Duyệt phiếu mượn"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="28dp"
                    android:textAlignment="center"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>