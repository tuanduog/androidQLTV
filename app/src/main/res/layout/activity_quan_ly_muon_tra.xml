<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QuanLyMuonTra"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD">

        <Button
            android:id="@+id/btnQLPhieuMuon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:text="Phiếu mượn" />

        <Button
            android:id="@+id/btnQLPhieuTra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phiếu trả"
            android:background="@drawable/tab_selector" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm"
            android:layout_weight="3"
            android:id="@+id/edt_TimKiemMuonTra"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Tìm"
            android:layout_weight="1"
            android:id="@+id/btnTimKiemMuonTra"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvQLPhieuMuonTra"/>
</LinearLayout>