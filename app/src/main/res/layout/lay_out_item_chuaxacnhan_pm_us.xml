<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/item_background"
    android:layout_margin="8dp"
    android:elevation="4dp"
    >

    <!-- Hình ảnh sách -->
    <ImageView
        android:id="@+id/imgSachMuon"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_image"
        android:background="@drawable/image_background"
        android:contentDescription="@string/book_image_description" />

    <!-- Thông tin sách -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtTenSachChuaXacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: "
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/txtTheLoaiChuaXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người mượn: "
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/txtNguoiMuonChuaXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:paddingBottom="6dp"
                android:textColor="@color/dark_gray" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian mượn: "
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
            android:id="@+id/txtThoiGianMuonCXN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/12/2024"
            android:textSize="16sp"
            android:paddingBottom="6dp"
            android:textColor="@color/dark_gray" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian trả: "
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/txtThoiGianTraCXN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/12/2024"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="@color/dark_gray" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
