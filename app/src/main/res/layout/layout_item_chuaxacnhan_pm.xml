<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/item_background"
    android:layout_margin="8dp"
    android:elevation="4dp"
    >

    <!-- Hình ảnh sách -->
    <ImageView
        android:id="@+id/imgSachMuonCXNQL"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_image"
        android:background="@drawable/image_background"
        android:contentDescription="@string/book_image_description" />

    <!-- Thông tin sách -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenSachCXNQL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: "
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/txtTheLoaiCXNQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:paddingBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người mượn: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtNguoiMuonCXNQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người mượn:"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="6dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="6dp"
                android:text="Thời gian mượn: "
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txtThoiGianMuonCXNQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian mượn: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="6dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian trả: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/txtThoiGianTraCXNQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian trả: "
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDongY"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Đồng ý"
                android:backgroundTint="@color/green_dark"
                android:layout_marginEnd="8dp"
                android:elevation="1dp" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Hủy"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_gray"
                android:elevation="1dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
