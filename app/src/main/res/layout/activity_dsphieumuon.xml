<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DsPhieuMuon"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtDanhSachPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách phiếu mượn"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD">

        <Button
            android:id="@+id/btnChuaXacNhanPM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chưa xác nhận"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:background="@drawable/tab_selector" />

        <Button
            android:id="@+id/btnDaXacNhanPM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đã xác nhận"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:background="@drawable/tab_selector" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvDSPM"/>
</LinearLayout>
